<Window x:Class="MDK13._1.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDK13._1"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="450" FontSize="30">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Введите пароль"
               Style="{StaticResource CenteredLabel}"/>

        <TextBox Grid.Row="1"
                 Height="100"
                 Width="400"
                 x:Name="tbPass"/>

        <Button Grid.Row="3"
                Height="100"
                Width="400"
                Click="btnEnter_Click"
                Content="Вход"/>

    </Grid>
</Window>
